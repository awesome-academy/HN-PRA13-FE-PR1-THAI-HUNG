mixin blogLetter(image, title, date, creator, amount, desc)
    .blog__letter 
        .blog__letter__image
            img(srcset=image)
        h3.blog__letter__title=title
        .blog__letter__release
            .blog__letter__date=date
            .blog__letter__creative
                .blog__letter__icon1
                    img(srcset="assets/icons/icon1.png")
                .blog__letter__post Đăng bởi
                .blog__letter__creator=creator
            .blog__letter__comment
                .blog__letter__icon2
                    img(srcset="assets/icons/icon2.png")
                .blog__letter__amount=amount
        p.blog__letter__text=desc

