mixin blogCommentInfor(image, name, date, desc)
    .blog__comment__infor 
        .blog__comment__image 
            img(srcset=image)
        .blog__comment__letter
            .blog__comment__name(style="font-weight: 700")=name
            .blog__comment__status
                .blog__comment__date(style="font-style: italic; margin: 5px 0")=date
                a.blog__comment__answer(style="font-style: italic; color: #f5bd10" href="#") Trả lời
            .blog__comment__text(style="font-size: 13px; font-style: italic")=desc